<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:wordle="clr-namespace:Wordle"
             x:DataType="wordle:HistoryPage"
             x:Class="Wordle.HistoryPage"
             Title="HistoryPage">
    <ScrollView VerticalOptions="FillAndExpand">
        <VerticalStackLayout x:Name="MainLayout"
                             Spacing="25"
                             BindableLayout.ItemsSource="{Binding List}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <wordle:HistoryEntryView HistoryEntry="{Binding .}"
                                             Padding="20"
                                             BackgroundColor="#111111"/>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>