<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="Wordle.GamePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Double x:Key="BoxSize">50</x:Double>
            <x:Double x:Key="Spacing">5</x:Double>
        </ResourceDictionary>

        <Style x:Key="WordleVertical" TargetType="HorizontalStackLayout">
            <Setter Property="Spacing" Value="{StaticResource Spacing}"/>
        </Style>
        <Style x:Key="WordleHorizontal" TargetType="HorizontalStackLayout">
            <Setter Property="Spacing" Value="{StaticResource Spacing}"/>
        </Style>
        <Style x:Key="WordleBox" TargetType="BoxView">
            <Setter Property="WidthRequest" Value="50"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="Color" Value="White"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Picker Title="row"
              SelectedItem="{Binding RowCount, Mode=TwoWay}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:Int32}">
                    <x:Int32>3</x:Int32>
                    <x:Int32>4</x:Int32>
                    <x:Int32>5</x:Int32>
                    <x:Int32>6</x:Int32>
                    <x:Int32>7</x:Int32>
                    <x:Int32>8</x:Int32>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Picker Title="col"
              SelectedItem="{Binding WordSize, Mode=TwoWay}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:Int32}">
                    <x:Int32>3</x:Int32>
                    <x:Int32>4</x:Int32>
                    <x:Int32>5</x:Int32>
                    <x:Int32>6</x:Int32>
                    <x:Int32>7</x:Int32>
                    <x:Int32>8</x:Int32>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Grid>
            <VerticalStackLayout 
			x:Name="WordleVerticalStack"
			Style="{StaticResource WordleVertical}"
			VerticalOptions="Center" 
			HorizontalOptions="Center">
            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>